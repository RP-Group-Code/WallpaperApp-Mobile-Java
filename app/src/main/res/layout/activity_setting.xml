<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp"
                    android:layout_height="74dp"
                    android:layout_centerInParent="true"
                    android:text="Terapkan Tema" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:id="@+id/ln2">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Sinkronisasi"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="?attr/primaryTitleColor"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/switch1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Data &amp; sync"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="?attr/primaryTitleColor"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/switch1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="3dp"
                android:orientation="vertical"
                android:id="@+id/ln3">
                <TextView
                    android:id="@+id/tv3"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Versi Aplikasi"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="?attr/primaryTitleColor"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/switch1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="3.2.2.70"
                    android:layout_gravity="bottom"
                    android:textSize="12sp"
                    android:textColor="?attr/primaryTitleColor"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/switch1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Contac US"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="?attr/primaryTitleColor"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/switch1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="WallpaperHD@gmail.com"
                    android:layout_gravity="bottom"
                    android:textSize="12sp"
                    android:textColor="?attr/primaryTitleColor"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/switch1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#042540"
        app:menu="@menu/item_menu_navi"
        android:id="@+id/bottom_navigation"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"/>

</RelativeLayout>